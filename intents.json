{
  "intents": [
    {
      "tag": "greeting",
      "patterns": [
        "Hi",
        "Hey",
        "Is anyone there?",
        "Hello",
        "Good day"
      ],
      "responses": [
        "Hey :-)",
        "Hello, thanks for visiting",
        "Hi there, what can I do for you?",
        "Hi there, how can I help?"
      ]
    },
    {
      "tag": "Whatsapp",
      "patterns": ["how are you?","how you doing?","whatsapp!","what about you?"],
      "responses": ["I am good!","Nothing as usual","I am partying","Always happy"]
    },
    {
      "tag": "goodbye",
      "patterns": ["Bye", "See you later", "Goodbye"],
      "responses": [
        "See you later, thanks for visiting",
        "Have a nice day",
        "Bye! Come back again soon."
      ]
    },
    {
      "tag": "thanks",
      "patterns": ["Thanks", "Thank you", "That's helpful", "Thank's a lot!"],
      "responses": ["Happy to help!", "Any time!", "My pleasure"]
    },
    {
      "tag": "items",
      "patterns": [
        "Which items do you have?",
        "What kinds of items are there?",
        "What do you sell?","Id like to buy something", "whats on the menu", "what do you reccommend?", "could i get something to eat"],
      "responses": [
        "We sell coffee, tea, coffee, chips",
        "We have coffee, tea, coffee, chips"
      ]
    },
    {
      "tag": "payments",
      "patterns": [
        "Do you take credit cards?",
        "Do you accept Mastercard?",
        "Can I pay with Paypal?",
        "Are you cash only?"
      ],
      "responses": [
        "We accept RUPAY,VISA ,Mastercard and UPI",
        "We accept most major credit cards, and UPI"
      ]
    },
    {
      "tag": "delivery",
      "patterns": [
        "How long does delivery take?",
        "How long does shipping take?",
        "When do I get my delivery?"
      ],
      "responses": [
        "Delivery takes 2-4 days",
        "Shipping takes 2-4 days"
      ]
    },
    {
      "tag": "funny",
      "patterns": [
        "Tell me a joke!",
        "Tell me something funny!",
        "Do you know a joke?"
      ],
      "responses": [
        "Why did the hipster burn his mouth? He drank the coffee before it was cool.",
        "What did the buffalo say when his son left for college? Bison."
      ]
    },
    {
      "tag": "parent",
      "patterns": ["whose your daddy?", "whose is your father?", "father", "who created you?",
        "created"],
      "responses": ["God is my all!", "The one who creates you!", "Almighty!"]
    }
    ,
    {
      "tag": "Friend",
      "patterns": ["who is your friend?", "who loves you?", "with whom you feel good?", "your partner?"],
      "responses": ["you are my friend!", "You buddy!","with you I feel good!", "You are my partner."]
    },

    {"tag": "Menu",
      "patterns": ["give me menu?","what's the rate?","tell me price?","price","what is the cost?"],
      "responses": ["Coffee 40 Rs/- \n Chips 5 Rs/- \n Chocolate 5-1000 Rs/- \n Tea 10 Rs/-"]
    },
    {"tag": "age",
         "patterns": ["how old", "how old is tim", "what is your age", "how old are you", "age?"],
         "responses": ["I am 18 years old!", "18 years young!"]
    },
    {
      "tag": "hours",
      "patterns": [
        "when are you guys open",
        "what are your hours",
        "hours of operation"
